{
    "app-id": "com.github.Murmele.Gittyup",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "Gittyup",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=network",
        "--filesystem=home",
        /*we use the keyring to store credentials*/
        "--filesystem=xdg-run/keyring",
        /*for git repos that require ssh keys*/
        "--socket=ssh-auth",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.freedesktop.Notifications",
        "--share=ipc"
    ],
    "rename-icon":"gittyup", /*Image will renamed to match the app-id konvention*/
    "modules": [
        {
            "name": "Gittyup",
            "buildsystem": "cmake-ninja",
            "config-opts" : ["-DCMAKE_INSTALL_PREFIX=/app"],
            "builddir": true,
            "build-commands": [
                "desktop-file-install --dir=/app/share/applications ../rsrc/linux/com.github.Murmele.gittyup.desktop",
                "install -Dm755 ../rsrc/linux/com.github.Murmele.gittyup.appdata.xml /app/share/appdata/com.github.Murmele.gittyup.appdata.xml", /* one folder up, because of builddir: true */
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_16x16.png /app/share/icons/hicolor/16x16/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_16x16@2x.png /app/share/icons/hicolor/16x16@2x/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_32x32.png /app/share/icons/hicolor/32x32/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_32x32@2x.png /app/share/icons/hicolor/32x32@2x/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_64x64.png /app/share/icons/hicolor/64x64/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_64x64@2x.png /app/share/icons/hicolor/64x64@2x/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_128x128.png /app/share/icons/hicolor/128x128/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_128x128@2x.png /app/share/icons/hicolor/128x128@2x/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_256x256.png /app/share/icons/hicolor/256x256/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_256x256@2x.png /app/share/icons/hicolor/256x256@2x/apps/gitahead.png",
                "install -Dm755 ../rsrc/Gittyup.iconset/icon_512x512.png /app/share/icons/hicolor/512x512/apps/gitahead.png"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Murmele/Gittyup",
                    "commit": "1ee9922d9256a53bd3e469fe051834705e6f924e"
                }
            ]
        }
    ]
}
